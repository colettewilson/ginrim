<div class="grid-x align-center">
	<div class="large-8 cell">
		<div class="project">
			{% for block in entry.projectBuilder %}
				{% switch block.type %}
					{% case "halfWidthImages" %}
						{% set positionClass %}
							{% switch block.imagePosition.value %}
								{% case "right" %}
									{{ "project__item--right" }}
								{% case "center" %}
									{{ "project__item--center" }}
								{% default %}
									{{ "project__item--left" }}
							{% endswitch %}
						{% endset %}
						<div class="project__item project__item--inline {{ block.images|length < 2 ? positionClass|trim }}">
							{% for row in block.images %}
								<div class="project__image">
									<div>
										<picture>
											<img src="{{ row.image.first().url }}" alt="{{ row.image.first().title }}">
										</picture>
									</div>
									<div class="project__label">
										<p>{{ row.imageLabel }}</p>
									</div>
								</div>
							{% endfor %}
						</div>
					{% case "fullwidthImages" %}
						{% for row in block.images %}
							<div class="project__item">
								<div>
									<picture>
										<img src="{{ row.image.first().url }}" alt="{{ row.image.first().title }}">
									</picture>
								</div>
								<div class="project__label">
									<p>{{ row.imageLabel }}</p>
								</div>
							</div>
						{% endfor %}
					{% default %}
						<div class="project__item">
							<div class="grid-x">
								<div class="large-8 cell">
									<div class="fmt fmt--unpadded">
										{{ block.text }}
									</div>
								</div>
							</div>
						</div>
				{% endswitch %}
			{% endfor %}
		</div>
	</div>
</div>
