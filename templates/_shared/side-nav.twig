{% set currentPage = craft.request.url %}

<nav class="js-nav side-nav">
	<div class="side-nav__inner">
		<div class="side-nav__main">
			<a class="side-nav__link logo" href="/">{{ siteName }}</a>
		</div>
		<ul class="side-nav__list">
			<li class="js-nav-dropdown-trigger side-nav__item">
					<a class="side-nav__link" href="">Works</a>
					<ul class="js-nav-dropdown side-nav__dropdown">
						{% for project in craft.entries.section("Project") %}
							<li class="side-nav__item">
								<a class="js-nav-dropdown-link side-nav__link {{ currentPage == project.url ? "is-active" }}" href="{{ project.url }}">{{ project.title }}</a>
							</li>
						{% endfor %}
					</ul>
			</li>
		</ul>
		<ul class="side-nav__list">
			<li class="side-nav__item">
				<a class="side-nav__link logo" href="/editions">Editions</a>
			</li>
			<li class="side-nav__item">
				<a class="side-nav__link logo" href="/about">About</a>
			</li>
			{% if craft.entries.section('contact').status('live').first() != null %}
				<li class="side-nav__item">
					<a class="side-nav__link logo" href="/artists-statement">Contact</a>
				</li>
			{% endif %}
		</ul>
		<div class="side-nav__footer">
			{% include "_shared/footer" %}
		</div>
	</div>
</nav>
